{
    "manifest_version": 2,
    "name": "サムネスキン: 全てのサムネにヒカキン登場",
    "version": "1.0",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "description": "【無料】YouTube全てのサムネイルにヒカキンが登場する神Firefox拡張機能",
    "permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "js": ["mrbeastify.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [
        "images/*.png",
        "images/*.json"
    ]
}